# GAIA Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
AUTONOMOUS_MODE=false

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gaia_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# External API Keys (Free Tiers - Sign up for keys)
OPENWEATHER_API_KEY=your_openweather_api_key
WEATHERBIT_API_KEY=your_weatherbit_api_key
NASA_API_KEY=your_nasa_api_key
NEWSAPI_KEY=your_newsapi_key
EONET_API_KEY=your_eonet_api_key
TOMTOM_API_KEY=your_tomtom_api_key
AIRVISUAL_API_KEY=your_airvisual_api_key

# AI Configuration
GEMINI_API_KEY=GEMINI_API_KEY=AIzaSyCTA4MIrWAntakjI4ck5HVKr607v3ZtKUY

# Security
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# WebSocket
WS_PORT=3002
WS_MAX_CONNECTIONS=1000

# Workflow Configuration
WORKFLOW_TIMEOUT=3600000
MAX_CONCURRENT_WORKFLOWS=10

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_RETENTION_DAYS=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000